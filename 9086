import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
	
		int T = sc.nextInt();
		
		for(int i=0; i<T; i++) {
			String A = sc.next();  //문자열 입력받기
			char first = A.charAt(0);  //문자열의 첫번째 값
			int lastIndex = A.length()-1;   //문자열의 마지막 인덱스 값
			char last = A.charAt(lastIndex);  //문자열의 마지막 값
			System.out.println(first+""+last);
		}
		sc.close();
	}
}
